---
import LinkButton from './LinkButton.astro'

interface Props{
    title: string
    description: string
    date: string
    link: string
}
const {title, description, link, date} = Astro.props
---
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-200">{date}</time>
<h3 class="text-lg font-bold text-[#a2c6e0] mt-2 mb-2">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-justify">{description}</p>
{
    link && (
    <LinkButton href={link}>
    Saber m√°s de la empresa
    </LinkButton>
    )
}
